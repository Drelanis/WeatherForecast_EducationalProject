{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@styles": ["src/app/styles"],
      "@styles/*": ["src/app/styles/*"],
      "@components": ["src/app/components"],
      "@components/*": ["src/app/components/*"],
      "@common": ["src/app/common"],
      "@common/*": ["src/app/common/*"],
      "@lib": ["src/app/lib"],
      "@lib/*": ["src/app/lib/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@apolloGraphQL": ["src/apollo"],
      "@apolloGraphQL/*": ["src/apollo/*"],
      "@hooks": ["src/app/hooks"],
      "@hooks/*": ["src/app/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
